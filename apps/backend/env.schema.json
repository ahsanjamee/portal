{
  "$ref": "#/definitions/SaaS Starter Config",
  "definitions": {
    "SaaS Starter Config": {
      "type": "object",
      "properties": {
        "port": {
          "type": "number",
          "default": 4000
        },
        "dev": {
          "type": "boolean",
          "default": true
        },
        "frontendURL": {
          "type": "string",
          "default": "http://localhost:3000"
        },
        "backendURL": {
          "type": "string",
          "default": "http://localhost:4000"
        },
        "redis": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string"
            },
            "port": {
              "type": "number"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "host",
            "port",
            "password"
          ],
          "additionalProperties": false,
          "default": {
            "host": "localhost",
            "port": 6379,
            "password": ""
          }
        },
        "mongoURL": {
          "type": "string",
          "default": "mongodb://127.0.0.1:27017/portal"
        },
        "auth": {
          "type": "object",
          "properties": {
            "jwtSecret": {
              "type": "string",
              "default": "secret@!@@~"
            },
            "accessTokenExpiresIn": {
              "type": "string",
              "default": "1h"
            },
            "refreshTokenExpiresIn": {
              "type": "string",
              "default": "1y"
            }
          },
          "additionalProperties": false
        },
        "adminCredential": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "password": {
              "type": "string"
            }
          },
          "required": [
            "email",
            "password"
          ],
          "additionalProperties": false
        },
        "sms": {
          "type": "object",
          "properties": {
            "apiUrl": {
              "type": "string",
              "default": "https://api.mimsms.com/api/SmsSending/SMS"
            },
            "username": {
              "type": "string",
              "format": "email"
            },
            "apiKey": {
              "type": "string"
            },
            "senderId": {
              "type": "string"
            }
          },
          "required": [
            "apiUrl",
            "username",
            "apiKey",
            "senderId"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "auth",
        "adminCredential"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}